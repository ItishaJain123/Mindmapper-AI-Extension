{
  "manifest_version": 3,
  "name": "AI Summary",
  "version": "1.0",

  "permissions": ["storage", "activeTab", "scripting"],
  
  "action": {
      "default_popup": "popup.html",
      "default_title": "AI Summary",
      "default_icon":"icon.jpeg"
  },

  "content_scripts":[
    {
      "matches":["<all_urls>"],
      "js":["content.js"]
    }
  ],

  "background":{
    "service_worker":"background.js"
  },

  "options_page":"options.html",

  "host_permissions":["<all_urls>"]
}
